<Window x:Class="downloadPresentations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:downloadPresentations"
        mc:Ignorable="d"
        Height="200" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <Button Content="Start" 
                Margin="0" Height="33" Width="140" HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="Button_Click_1" />
        <TextBox x:Name="textUrl" HorizontalAlignment="Center"
                 Margin="0,5,0,0" Text="URL" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="40" TextChanged="TextBox_TextChanged"/>
        <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <TextBlock x:Name="debugText" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" MaxHeight="60" MinHeight="60"/>
        </ScrollViewer>
        <Label Content="debug info:" HorizontalAlignment="Left" Margin="0,98,0,0" VerticalAlignment="Top" Width="130"/>
    </Grid>
</Window>
